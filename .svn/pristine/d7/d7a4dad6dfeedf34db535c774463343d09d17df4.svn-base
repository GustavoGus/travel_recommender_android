<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#FFFFFFFF">

    <LinearLayout
        android:id="@+id/llayhoriz_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
		<org.osmdroid.views.MapView
		    android:id="@+id/mapview"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:enabled="true"
		    android:clickable="true"
		    android:layout_weight="0.2"/>
		    
		    
		
        <LinearLayout
            android:id="@+id/llayvert_buttonmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_weight="0.8" android:gravity="center">

            <ImageButton
                android:id="@+id/btn_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hotel" android:background="@drawable/btn_default_normal"/>

            <ImageButton
                android:id="@+id/btn_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/restaurant" android:background="@drawable/btn_default_normal"/>

            <ImageButton
                android:id="@+id/btn_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bar" android:background="@drawable/btn_default_normal"/>

            <ImageButton
                android:id="@+id/btn_museum_historical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/museum_historical" android:background="@drawable/btn_default_normal"/>

            <ImageButton
                android:id="@+id/btn_transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/transport" android:background="@drawable/btn_default_normal"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayvert_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="center_vertical|fill_horizontal">

        <ImageView
            android:id="@+id/img_separation"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:src="@drawable/separation_bar" android:padding="0dp" android:layout_gravity="center" android:fitsSystemWindows="true" android:background="#000000" android:layout_margin="10dp"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Checkin" android:background="@drawable/btn_default_normal"/>

        <LinearLayout
            android:id="@+id/llayhoriz_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:text="@string/Add" android:background="@drawable/btn_default_normal"/>

            <ToggleButton
                android:id="@+id/tgbtn_on"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ToggleButton" android:layout_weight="0.5" android:layout_marginLeft="10dp" android:background="@drawable/btn_default_normal"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>