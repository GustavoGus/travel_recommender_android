<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widgetbg"
    android:orientation="vertical" android:padding="0dp">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/llay_bottom_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:gravity="right|fill_vertical" android:paddingRight="30dp" android:background="@drawable/button_panel" android:paddingLeft="30dp" android:layout_alignParentBottom="true" android:paddingTop="0dp" android:paddingBottom="0dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/app_icon"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="0.1"/>

            <ImageButton
                android:id="@+id/Widgetbtn_localize"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center" android:src="@drawable/gps"/>

            <ImageButton
                android:id="@+id/Widgetbtn_social"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/social" android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:clipToPadding="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/WidgetTv_Messages"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_panel"
                android:text="Test text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="16dp" android:longClickable="false"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>