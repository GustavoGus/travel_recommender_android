package adm.Comment;

import java.util.ArrayList;

/**
 * Clase que encapsula los objectos CommentItem.
 *
 */
public class Comments {
	private ArrayList<CommentItem> comments;
	private String next_query;
	
	public Comments(ArrayList<CommentItem> comments, String next_query) {
		super();
		this.comments = comments;
		this.next_query = next_query;
	}
	
	/**
	 * @return the comments
	 */
	public ArrayList<CommentItem> getComments() {
		return comments;
	}
	/**
	 * @param comments the comments to set
	 */
	public void setComments(ArrayList<CommentItem> comments) {
		this.comments = comments;
	}
	/**
	 * @return the next_query
	 */
	public String getNext_query() {
		return next_query;
	}
	/**
	 * @param next_query the next_query to set
	 */
	public void setNext_query(String next_query) {
		this.next_query = next_query;
	}
	
	/*
	 * Metodos de la lista comments
	 */
	public boolean add(CommentItem object) {
		return comments.add(object);
	}
	public void clear() {
		comments.clear();
	}
	public boolean contains(Object object) {
		return comments.contains(object);
	}
	public boolean isEmpty() {
		return comments.isEmpty();
	}
	public boolean remove(Object object) {
		return comments.remove(object);
	}
	public int size() {
		return comments.size();
	}
}
