<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabsLayout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/tab_bg_selector"
	android:padding="0dip" android:gravity="left" android:orientation="horizontal" android:layout_gravity="center_vertical">

    <ImageView android:id="@+id/tabIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left" />
    
	<TextView android:id="@+id/tabsText" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Title"
		android:textSize="11dip" android:textColor="@drawable/tab_text_selector" android:layout_gravity="center_horizontal|center_vertical"/>
</LinearLayout>